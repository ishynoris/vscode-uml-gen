{
  "name": "uml-gen",
  "displayName": "UML Generator",
  "description": "UML Diagram Class Generator",
  "license": "MIT",
  "version": "0.1.3",
  "publisher": "Anailson-Mota",
  "author": {
    "name": "Anailson Mota",
    "email": "mota.a.santos@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ishynoris/vscode-uml-gen.git"
  },
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages",
    "Extension Packs",
    "Visualization"
  ],
  "activationEvents": [
    "workspaceContains:**/*.java",
    "workspaceContains:**/*.php"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uml-gen.right-click",
        "title": "Create UML Class Diagram",
        "category": "UML Gen"
      },
      { 
        "command": "uml-gen.title-click",
        "title": "Create UML Class Diagram",
        "category": "UML Gen"
      }
    ],
    "menus": {
      "editor/title/context": [
        {
          "command": "uml-gen.title-click",
          "when": "resourceLangId =~ /^java$|^php$/",
          "group": "uml-gen"
        }
      ],
      "explorer/context": [
        {
          "command": "uml-gen.right-click",
          "when": "resourceLangId =~ /^java$|^php$/",
          "group": "uml-gen"
        }
      ]
    }
  },
  "scripts": {
    "publish": "vsce package --pre-release",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
